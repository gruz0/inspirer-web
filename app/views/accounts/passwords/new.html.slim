- title = t('views.account.password.new.title')
- content_for :title, title

h2 = title

= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: 'form') do |f|
  = render "accounts/shared/error_messages", resource: resource

  .form-group
    = f.label :email
    = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control'

  = f.submit "Send me reset password instructions", class: 'btn btn-primary'

= render "accounts/shared/links"

