- title = t('views.my.learning.video.index.title')
- content_for :title, title

h2 = title

.row
  .col-sm-4
    = link_to(new_my_learning_video_path, class: 'btn btn-success')
      = t('shared.buttons.add_new')

br

.row
  .col
    table#learning_videos.table.table-sm.table-hover
      thead.thead-light
        tr
          th scope="col" Title
          th scope="col" Feeling
          th scope="col" Created at
          th scope="col"

      tbody
        - @videos.each do |video|
          - video_presenter = Learning::VideoPresenter.new(video)
          tr
            td scope="row" = video_presenter.clickable_title
            td = video.feeling
            td = human_readable_date(video.created_at)
            td.text-right
              = link_to(edit_my_learning_video_path(video), class: 'btn btn-secondary btn-sm')
                = fa_icon('edit')
