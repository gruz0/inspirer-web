= render partial: 'shared/validation_errors', locals: { model: article, errors: local_assigns[:errors].presence }

= form_for [:my, article] do |f|
  .form-group.row
    = f.label :created_at, class: 'col-4 col-lg-3 col-form-label'
    .col-8.col-sm-5.col-md-4
      = f.text_field :created_at, class: 'form-control created-at'

  .form-group.row
    = f.label :url, class: 'col-4 col-lg-3 col-form-label'
    .col.col-lg-8
      = f.text_field :url, class: 'form-control', required: 'required', min: 0

  .form-group.row
    = f.label :title, class: 'col-4 col-lg-3 col-form-label'
    .col.col-lg-8
      = f.text_field :title, class: 'form-control', max: 100
      small.form-text.text-muted
        | (100 characters maximum)

  = render partial: 'shared/feeling', locals: { form: f, value: article.feeling }
  = render partial: 'shared/notes', locals: { form: f }

  .form-group.row
    .col-4.col-lg-3
    .col-8
      = f.submit t('shared.buttons.save'), class: 'btn btn-success'

